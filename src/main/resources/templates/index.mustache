{{>layout/header}}

<div class="h-100 d-flex flex-column align-items-center">
    <div class="col-md-7 mt-5">
        <h1 class="mb-5">스프링부트로 시작하는 웹 서비스 Ver.7</h1>
        <div class="row">
            <div class="col-md-7">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#loginName}}
                    Logged in as: <span id="user">{{loginName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/loginName}}
                {{^loginName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active"
                       role="button">Google
                        Login</a>
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active"
                       role="button">Naver Login</a>
                {{/loginName}}
            </div>
        </div>
        <br>
        <!-- 목록 출력 영역 -->
        <table class="table table-hover">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}